                            <ContentPresenter x:Name="ContentSite" RecognizesAccessKey="True" ContentSource="Header"
                                              d:LayoutOverrides="Width, Height" HorizontalAlignment="Center"
                                              Margin="6,1,6,1" VerticalAlignment="Center" />
